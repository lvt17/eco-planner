# Server
NODE_ENV=production
PORT=3001

# Database (Railway cung cấp DATABASE_URL tự động khi thêm PostgreSQL service)
DATABASE_URL=postgresql://user:password@host:5432/database

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Hugging Face AI
HUGGINGFACE_API_KEY=your-huggingface-api-key
AI_PRIMARY_MODEL=Qwen/Qwen2.5-7B-Instruct
AI_FALLBACK_MODEL=Qwen/Qwen2.5-7B-Instruct

# Frontend URL (CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
